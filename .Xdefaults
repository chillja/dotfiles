!-------------------------------------------------------------------------------
!!! XScreensaver Settings
!-------------------------------------------------------------------------------
xscreensaver.newLoginCommand: light-locker-command -l
xscreensaver.logFile:/var/log/xscreensaver.log
xscreensaver.verbose:false
xscreensaver.font: -*-creep-regular-*-normal-*-*-120-*-*-*-*-*-*
!-------------------------------------------------------------------------------
!!! XFT SETTINGS !!!
!-------------------------------------------------------------------------------
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!-------------------------------------------------------------------------------
!!! URXVT SETTINGS !!!
!-------------------------------------------------------------------------------
urxvt*font: xft:terminus:pixelsize=12,xft:Fira Code:pixelsize=12
Urxvt*depth: 33
URxvt*geometry: 80x25
URxvt*internalBorder: 16
URxvt*borderLess: false
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
URxvt*scrollColor: #8bc34a
URxvt.underlineURLs: true


URxvt.perl-ext-common: default,matcher,selection-to-clipboard
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.colorUL: #ffc107
URxvt*dynamicColors: on

