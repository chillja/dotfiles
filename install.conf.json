[
    {
        "clean": ["~"]
    },
    {
        "defaults": {
            "link":{
                "create": true,
                "relink": true
            }
        }
    },
    {
        "shell": [
            [
                "mkdir -p ~/Projects/Web ~/Projects/Games ~/Github ~/Sandbox ~/InterC  ~/.ssh/",
                "Creating directories"
            ],
            [
                "mkdir -p ~/.vim/bundle/repos/github.com/Shougo/dein.vim",
                "Creating dein.vim folders"
            ]
        ]
    },
    {
        "link": {
            "~/.dotfiles": "",
            "~/.tmux.conf": "tmux.conf",
            "~/.vim/vimrc": "vimrc",
            "~/.vim/test.vim": "test.vim",
            "~/.vim/after": "vim/after",
            "~/.vim/autoload": "vim/autoload",
            "~/.vim/ftplugin": "vim/ftplugin",
            "~/.vim/syntax": "vim/syntax",
            "~/.vim/UltiSnipps": "vim/UltiSnips",
            "~/.vim/vimrcmin": "vimrcmin",
            "~/.ssh/config": "ssh_config",
            "~/.zshrc": "zshrc",
            "~/.gitconfig": "gitconfig",
            "~/.gitignore_global": "gitignore_global",
            "~/.config/bspwm": "bspwm",
            "~/.config/sxhkd": "sxhkd",
            "~/.config/termite": "termite",
            "~/.ncmpcpp": "ncmpcpp",
            "~/.weechat": "weechat",
            "~/.Xdefaults": "xdefaults",
            "~/.Xmodmap": "Xmodmap",
            "~/.userStyle.css": "userStyle.css",
            "~/bin": "bin",
            "~/.git_template": "git_template",
            "~/.agignore": "agignore"
        }
    },
    {
        "shell": [
            [
                "git submodule update --init --recursive",
                "Installing/updating submodules"
            ],
            [
                "git clone https://github.com/Shougo/dein.vim ~/.vim/bundle/repos/github.com/Shougo/dein.vim",
                "Installing dein.vim"
            ],
            [
                "mkdir -p ${XDG_CONFIG_HOME:=$HOME/.config}",
                "Creating nvim config folder"
            ],
            [
                "ln -sf ~/.vim $HOME/.config/nvim",
                "Creating symLink for nvim"
            ],
            [
                "ln -sf ~/.vim/vimrc $HOME/.config/nvim/init.vim",
                "Creating symLink for nvimrc"
            ]
        ]
    }
]
