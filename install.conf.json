[
    {
        "clean": ["~"]
    },
    {
        "defaults": {
            "link":{
                "create": true,
                "relink": true
            }
        }
    },
    {
        "shell": [
            [
                "mkdir -p ~/Projects/Web ~/Projects/Games ~/Github ~/Sandbox ~/InterC  ~/.ssh/",
                "Creating directories"
            ]
        ]
    },
    {
        "link": {
            "~/.dotfiles": "",
            "~/.tmux.conf": "tmux.conf",
            "~/.vim/vimrc": "vimrc",
            "~/.vim": "vim/",
            "~/.ssh/config": "ssh_config",
            "~/.zshrc": "zshrc",
            "~/.gitconfig": "gitconfig",
            "~/.gitignore_global": "gitignore_global",
            "~/.config": "config",
            "~/.ncmpcpp": "ncmpcpp",
            "~/.weechat": "weechat",
            "~/.Xdefaults": "xdefaults",
            "~/.userStyle.css": "userStyle.css",
            "~/bin": "bin"
        }
    },
    {
        "shell": [
            [
                "git submodule update --init --recursive",
                "Installing/updating submodules"
            ]
        ]
    }
]
