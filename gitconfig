[user]
	name = Arlefreak
	email = hi@arlefreak.com
[push]
	default = simple
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[alias]
    lol = log --graph --decorate --oneline
    lola = log --graph --decorate --oneline --all
	d = difftool
	ctags = !.git/hooks/ctags
[color]
	ui = auto
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[difftool "nvimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[commit]
	verbose = true
[init]
	templatedir = ~/.git_template
